cron enabled:
  1: |
    replicas: 1
    selector:
      matchLabels:
        component: maildev
    template:
      metadata:
        labels:
          component: maildev
      spec:
        containers:
          - args:
              - --mail-directory
              - /home/node/maildev-data
            image: maildev/maildev:2.1.0
            imagePullPolicy: IfNotPresent
            livenessProbe:
              httpGet:
                path: /healthz
                port: http
            name: maildev
            ports:
              - containerPort: 1080
                name: http
                protocol: TCP
              - containerPort: 1025
                name: smtp
                protocol: TCP
            readinessProbe:
              httpGet:
                path: /healthz
                port: http
            resources:
              limits:
                cpu: null
                memory: null
              requests:
                cpu: null
                memory: null
            volumeMounts:
              - mountPath: /home/node/maildev-data
                name: data
        volumes:
          - name: data
            persistentVolumeClaim:
              claimName: maildev
  2: |
    accessModes:
      - ReadWriteMany
    resources:
      requests:
        storage: 1024M
  3: |
    jobTemplate:
      spec:
        template:
          spec:
            containers:
              - args:
                  - find
                  - /home/node/maildev-data
                  - -type
                  - f
                  - -mtime
                  - "+15"
                  - -exec
                  - rm
                  - -f
                  - '{}'
                  - ;
                image: busybox:latest
                imagePullPolicy: IfNotPresent
                name: delete-mail
                volumeMounts:
                  - mountPath: /home/node/maildev-data
                    name: data
              - args:
                  - wget
                  - maildev:1080/reloadMailsFromDirectory
                image: busybox:latest
                imagePullPolicy: IfNotPresent
                name: reload-mail
            restartPolicy: OnFailure
            volumes:
              - name: data
                persistentVolumeClaim:
                  claimName: maildev
    schedule: 0 1 * * *
    startingDeadlineSeconds: 100
